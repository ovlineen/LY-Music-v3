/* components/ranking-item/ranking-item.wxss */
.ranking {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f2f2f2;
  padding-left: 10rpx;
  margin: 20rpx 0;
  border-radius: 15rpx;
  overflow: hidden;
}

.cover {
  width: 250rpx;
  height: 250rpx;
}

.cover .pic {
  width: 100%;
  height: 100%;
}
.song .name {
  margin: 5rpx 10rpx;
}
.song .item {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.song .item .name {
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.song .item .singerName {
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.cover {
  position: relative;
}

.cover .playCount {
  position: absolute;
  bottom: 2rpx;
  right: 5rpx;
  color: #fff;
}
