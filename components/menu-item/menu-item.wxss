/* components/menu-item/menu-item.wxss */
.item {
  margin-right: 20rpx;
}

.menu-item {
  position: relative;
}

.menu-item .playCount {
  position: absolute;
  bottom: 15rpx;
  right: 10rpx;
  font-size: 28rpx;
  color: #fff;
}

.menu-item .cover {
  width: 250rpx;
  height: 250rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.menu-name {
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
