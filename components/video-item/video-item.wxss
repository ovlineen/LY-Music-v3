/* components/video-item/video-item.wxss */
.item {
  width: 47%;
  margin: 0 8rpx 30rpx;
}

.item .cover {
  position: relative;
}

.item .cover .coverPic {
  width: 100%;
  height: 220rpx !important;
}

.item .cover .more {
  position: absolute;
  bottom: 8rpx;
  left: 5rpx;
  right: 5rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #fff;
}

.item .info {
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
