/* pages/menu-item/menu-item.wxss */
.pic {
  width: 100%;
  height: 100%;
}
.cover {
  width: 100%;
  height: 480rpx;
}

.backgournd-box {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 480rpx;
  background: rgba(18, 22, 39, 0.16);
  backdrop-filter: blur(5px);
}

.info {
  position: absolute;
  top: 0;
  left: 0;
}

.info .item {
  margin: 6%;
  display: flex;
  color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
}

.itemCover {
  width: 320rpx;
  height: 220rpx;
}

.itemCover .pic {
  width: 100%;
  height: 100%;
}

.creator {
  padding-left: 20rpx;
}

.creator .name {
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
}

.creator .avatar {
  display: flex;
  overflow: hidden;
  margin: 10rpx 0;
  align-items: center;
}

.creator .avatar .pic {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.creator .avatar .name {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.creator .description {
  width: 350rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.more {
  margin-top: 80rpx;
  padding: 0 15%;
  display: flex;
  justify-content: space-between;
  color: #fff;
}

.more .like,
.more .share {
  display: flex;
  align-items: center;
}

.more image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.song-list {
  width: 100%;
  height: 100vh;
  color: #000;
  box-sizing: border-box;
  padding: 0 10rpx;
}

.song-list .item {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.song-list .detail {
  margin-left: 20rpx;
}

.song-list .detail .nikname {
  font-size: 28rpx;
  color: #ccc;
}
