/* pages/detail-menu/detail-menu.wxss */
page {
  padding: 0 10rpx;
  box-sizing: border-box;
}
.title {
  font-size: 36rpx;
  font-weight: 700;
}

.menu {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.menu .item {
  width: 48%;
  margin: 20rpx 0;
}

.menu .item:nth-child(odd) {
  margin-right: 20rpx;
}

.cover {
  height: 350rpx;
}

.cover .pic {
  width: 100%;
  height: 100%;
}
